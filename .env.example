# ─────────────────────────────────────────────────────────────────────────────
# RIVALLAND PROP TRADING SYSTEM - ENVIRONMENT CONFIGURATION
# ─────────────────────────────────────────────────────────────────────────────
# Copy this file to .env and fill in your values

# Environment (development, paper, production)
ENVIRONMENT=paper
TRADING_MODE=paper
DEBUG=false

# ─────────────────────────────────────────────────────────────────────────────
# BROKER CREDENTIALS (Zerodha Kite Connect)
# ─────────────────────────────────────────────────────────────────────────────
BROKER__API_KEY=your_api_key_here
BROKER__API_SECRET=your_api_secret_here
BROKER__ACCESS_TOKEN=

# ─────────────────────────────────────────────────────────────────────────────
# TRADING CONFIGURATION
# ─────────────────────────────────────────────────────────────────────────────
# Comma-separated list of symbols to trade
SYMBOLS=["RELIANCE", "INFY", "TCS", "HDFCBANK", "ICICIBANK"]
TIMEFRAME=day

# ─────────────────────────────────────────────────────────────────────────────
# RISK MANAGEMENT
# ─────────────────────────────────────────────────────────────────────────────
RISK__MAX_RISK_PER_TRADE_PERCENT=1.0
RISK__MIN_RISK_REWARD_RATIO=2.0
RISK__MAX_OPEN_POSITIONS=5
RISK__MAX_DAILY_LOSS_PERCENT=2.0
RISK__MAX_DAILY_TRADES=20
RISK__CONSECUTIVE_LOSS_LIMIT=3

# ─────────────────────────────────────────────────────────────────────────────
# STRATEGY SETTINGS
# ─────────────────────────────────────────────────────────────────────────────
STRATEGY__SWING_LOOKBACK=3
STRATEGY__MIN_PULLBACK_BARS=2
STRATEGY__ENABLE_TRAILING_STOP=true
STRATEGY__TRAILING_STOP_ACTIVATION_PERCENT=1.5
STRATEGY__TRAILING_STOP_DISTANCE_PERCENT=1.0

# ─────────────────────────────────────────────────────────────────────────────
# NOTIFICATIONS
# ─────────────────────────────────────────────────────────────────────────────
# Telegram
NOTIFICATION__TELEGRAM_ENABLED=false
NOTIFICATION__TELEGRAM_BOT_TOKEN=
NOTIFICATION__TELEGRAM_CHAT_ID=

# Email
NOTIFICATION__EMAIL_ENABLED=false
NOTIFICATION__SMTP_HOST=smtp.gmail.com
NOTIFICATION__SMTP_PORT=587
NOTIFICATION__SMTP_USERNAME=
NOTIFICATION__SMTP_PASSWORD=

# ─────────────────────────────────────────────────────────────────────────────
# DATABASE
# ─────────────────────────────────────────────────────────────────────────────
DATABASE__URL=sqlite+aiosqlite:///./data/trading.db

# ─────────────────────────────────────────────────────────────────────────────
# MONITORING
# ─────────────────────────────────────────────────────────────────────────────
MONITORING__PROMETHEUS_ENABLED=false
MONITORING__PROMETHEUS_PORT=9090
