# Paper Trading Configuration - NSE (India)
# ==========================================
# Use this configuration for paper trading on NSE/BSE
# Copy to .env before starting paper trading

# Environment
ENVIRONMENT=paper
TRADING_MODE=paper

# Broker Configuration (Zerodha Kite)
# For paper trading, use test credentials
KITE_API_KEY=your_test_api_key
KITE_API_SECRET=your_test_api_secret

# Market Configuration
MARKET_TIMEZONE=Asia/Kolkata
MARKET_EXCHANGE=NSE
MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30

# Symbols to Trade (Blue Chips for testing)
SYMBOLS=["RELIANCE","TCS","INFY","HDFCBANK","ICICIBANK"]

# Risk Settings (Conservative for paper trading)
MAX_RISK_PER_TRADE=0.5
MAX_DAILY_LOSS=2.0
MAX_POSITIONS=3
MIN_RISK_REWARD_RATIO=2.0

# Strategy Parameters
SWING_LOOKBACK=3
MIN_PULLBACK_BARS=2
ENABLE_TRAILING_STOP=true

# Notifications (Optional)
TELEGRAM_ENABLED=false
EMAIL_ENABLED=false

# Logging
LOG_LEVEL=DEBUG
