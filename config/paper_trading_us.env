# Paper Trading Configuration - US Markets (NYSE/NASDAQ)
# ========================================================
# Use this configuration for paper trading on US markets
# Copy to .env before starting paper trading

# Environment
ENVIRONMENT=paper
TRADING_MODE=paper

# Broker Configuration (Alpaca)
# Get paper trading keys from https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_paper_api_key
ALPACA_API_SECRET=your_paper_api_secret
ALPACA_PAPER_TRADING=true

# Market Configuration
MARKET_TIMEZONE=America/New_York
MARKET_EXCHANGE=NYSE
MARKET_OPEN_TIME=09:30
MARKET_CLOSE_TIME=16:00

# Symbols to Trade (US Blue Chips)
SYMBOLS=["AAPL","MSFT","GOOGL","AMZN","JPM"]

# Risk Settings (Conservative for paper trading)
MAX_RISK_PER_TRADE=0.5
MAX_DAILY_LOSS=2.0
MAX_POSITIONS=3
MIN_RISK_REWARD_RATIO=2.0

# Strategy Parameters
SWING_LOOKBACK=3
MIN_PULLBACK_BARS=2
ENABLE_TRAILING_STOP=true

# Notifications (Optional)
TELEGRAM_ENABLED=false
EMAIL_ENABLED=false

# Logging
LOG_LEVEL=DEBUG

# Alpaca-specific settings
ALPACA_BASE_URL=https://paper-api.alpaca.markets
